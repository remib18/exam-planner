<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../styles/global.css"
            xmlns="http://javafx.com/javafx/17.0.2-ea">
    <children>
        <BorderPane prefHeight="186.0" prefWidth="400.0">
            <bottom>
                <HBox alignment="BOTTOM_CENTER" prefHeight="35.0" prefWidth="336.0" spacing="16.0"
                      BorderPane.alignment="CENTER">
                    <children>
                        <Button fx:id="cancelBtn" mnemonicParsing="false" onMouseClicked="#handleClose"
                                text="actions.close"/>
                    </children>
                    <BorderPane.margin>
                        <Insets bottom="24.0" left="32.0" right="32.0"/>
                    </BorderPane.margin>
                </HBox>
            </bottom>
            <center>
                <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets left="16.0" right="16.0"/>
                    </BorderPane.margin>
                    <children>
                        <Text fx:id="messageText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0"
                              text="popups.invalid-credentials.message"/>
                    </children>
                </VBox>
            </center>
            <top>
                <HBox alignment="CENTER" prefHeight="43.0" prefWidth="400.0" spacing="4.0"
                      BorderPane.alignment="CENTER">
                    <children>
                        <Text fx:id="titleText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0"
                              text="popups.invalid-credentials.title">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Text>
                    </children>
                </HBox>
            </top>
        </BorderPane>
    </children>
</AnchorPane>
